<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sms_wizard_action" model="ir.actions.act_window" >
        <field name="name">sms.wizard.action</field>
        <field name="res_model">elk.sms</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="sale_order_elk46_sms.elk_sms_wizard_view"/>
    </record>

    <record id="sale_order_button_view" model="ir.ui.view" >
        <field name="name">sale.order.button.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(sale_order_elk46_sms.sms_wizard_action)d" string="Send SMS" type="action" attrs="{'invisible': ['|', ('state', '=', 'draft'), ('state', '=', 'cancel')]}"/>
            </xpath>
        </field>
    </record>
</odoo>


