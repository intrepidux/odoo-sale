<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[@t-call='web.external_layout']//t[@t-set='information_block']/t[@t-if='doc.partner_shipping_id != doc.partner_invoice_id']/div[@t-field='doc.partner_shipping_id']" position="after">
            <t t-if="doc.company_id.fiscal_position_id.id == doc.fiscal_position_id.id" t-set="has_fiscal_position" t-value="True"/>
            <t t-elif="not doc.company_id.fiscal_position_id or not doc.fiscal_position_id" t-set="has_fiscal_position" t-value="True"/>
            <p t-if="has_fiscal_position"><t t-esc="doc.partner_shipping_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.partner_shipping_id.vat"/></p>
        </xpath>
    </template>
</odoo>